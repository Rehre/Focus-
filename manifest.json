{
  "manifest_version": 2,
  "name": "Focus!",
  "version": "1.0.0",
  "description": "Keep out distraction by automatically closing the tab when you go into the url",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background/init.js", "background/watch.js"],
    "persistent": false
  },
  "permissions": ["storage", "tabs"]
}
